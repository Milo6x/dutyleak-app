# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# API Key Encryption
# Generate a strong secret for encrypting API keys in the database
# You can generate one using: openssl rand -base64 32
API_KEY_ENCRYPTION_SECRET=your_32_character_encryption_secret_here

# External API Keys (Optional - can be configured via UI)
# These are fallback keys if not configured through the settings page
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
CUSTOMS_API_KEY=your_customs_api_key_here

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Database Configuration (if using external database)
DATABASE_URL=postgresql://username:password@localhost:5432/dutyleak

# Redis Configuration (for caching - optional)
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Performance & Monitoring
# Enable performance monitoring and metrics
ENABLE_PERFORMANCE_MONITORING=true

# Sentry for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_BATCH_PROCESSING=true
ENABLE_NOTIFICATIONS=true
ENABLE_REVIEW_QUEUE=true

# Development Tools
# Enable debug logging
DEBUG=false

# Enable TypeScript strict mode checks
TYPESCRIPT_STRICT=true

# Amazon FBA Integration (optional)
AMAZON_ACCESS_KEY_ID=your_amazon_access_key
AMAZON_SECRET_ACCESS_KEY=your_amazon_secret_key
AMAZON_MARKETPLACE_ID=your_marketplace_id

# Customs API Configuration
CUSTOMS_API_URL=https://api.customs.gov/v1
CUSTOMS_API_TIMEOUT=30000

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Cache Configuration
CACHE_TTL=300000
CACHE_MAX_SIZE=1000